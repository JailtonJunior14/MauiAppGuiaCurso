<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppGuiaCurso.Disciplinas.DesenvolvimentoDS"
             Title="DesenvolvimentoDS"             BackgroundColor="#03091f">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="Titulo" TargetType="Label">
                <Setter Property="TextColor" Value="#9b2bfc"/>
            </Style>
            <Style x:Key="Conteudo" TargetType="Label">
                <Setter Property="TextColor" Value="#5195fc"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ScrollView>
        <StackLayout>
            <Label 
        x:Name="lblTitulo"
        Style="{StaticResource Titulo}"
        VerticalOptions="Center" 
        HorizontalOptions="Center" />
            <Label 
        Style="{StaticResource Conteudo}"
x:Name="lblConteudo"
VerticalOptions="Center" 
HorizontalOptions="Center" />
        </StackLayout>
    </ScrollView>
</ContentPage>